// Query 12

db.orders.aggregate([
    {
        $match: {
             payments: []
        },
    },
    {
        $group: {
        _id: "$customer.username",
        count: {
          $count: {},
        },
      },
    },
    {
      $sort: {
        count: -1
      }
    },
    {
      $limit: 5
    }
  ])

